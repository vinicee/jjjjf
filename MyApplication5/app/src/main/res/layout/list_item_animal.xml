<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="#A0C2CF">
    <ImageView
        android:id="@+id/animalResource"
        android:layout_width="68dp"
        android:layout_height="92dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/beaver"

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Название животного"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/animalResource"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/animalDescription"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Описание животного"
        app:layout_constraintStart_toEndOf="@+id/animalResource"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/populationSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Численность животного"
        app:layout_constraintStart_toEndOf="@+id/animalResource"
        app:layout_constraintTop_toBottomOf="@+id/animalDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>